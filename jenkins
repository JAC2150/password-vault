---
- hosts: jenkins
  become: yes
  tasks:
  - name: Install Java
    package:
      name: default-jre
      state: present
  - name: jenkins key
    apt_key:
      url: https://pkg.jenkins.io/debian/jenkins.io.key
      state: present
  - apt_repository:
      repo: deb http://pkg.jenkins.io/debian-stable binary/
      state: present
  - name: Update
    apt:
      upgrade: yes
      update_cache: yes
  - name: Install Jenkins
    package:
      name: jenkins
      state: present
  - name: start jenkins
    service:
      name: jenkins
      state: started
